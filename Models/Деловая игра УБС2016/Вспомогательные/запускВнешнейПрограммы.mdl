$BC55MODEL 0.0.0 2016.10.15.2.0.0 0
Модель блока для модуля автокомпиляции RDS BCpp55@Common.dll
$VARS
  signal name "Start" in menu run default 0
  signal name "Ready" out menu default 0
  string name "programname" in menu default ""
  string name "arguments" in menu default ""
  string name "workdir" in menu default ""
  logical name "runexit" out menu default 0
$ENDDECL
$MODEL
//rdsMessageBox((workdir+programname+arguments).c_str(), "workdir", MB_OK);

runexit = RunAndWait(programname.c_str(), arguments.c_str(), workdir.c_str());
$GLOBAL
// Запуск программы и ожидание ее завершения
BOOL RunAndWait(
      char *path,       // Имя EXE-файла
      char *parameters, // Параметры командной строки
	char *workdir 	// рабочая директория
      )
{ 
    char *cmd;
    // Формирование полной командной строки
    cmd=rdsDynStrCat( "", path, FALSE);
    rdsAddToDynStr( &cmd, " ", FALSE);
    rdsAddToDynStr( &cmd, parameters, FALSE);
    rdsAddToDynStr( &cmd, " ", FALSE); // Пробел (на всякий случай)

    // В cmd - полная командная строка запуска программы
    if(cmd==NULL) return FALSE;

    // Заполнение структуры STARTUPINFO
    STARTUPINFO startup; // Структура параметров запуска процесса
    PROCESS_INFORMATION info; // Структура описания процесса
    ZeroMemory( &startup, sizeof(STARTUPINFO) );
    startup.cb = sizeof(STARTUPINFO);

//rdsMessageBox(cmd,"command",MB_OK);
//rdsMessageBox(workdir,"dir",MB_OK);
    // Запуск процесса
    BOOL ok = TRUE;
    if(!CreateProcess(NULL,cmd,NULL,NULL,FALSE,
          0,NULL,workdir,&startup,&info))
      ok = FALSE; // Запустить не получилось

    if(ok)
      { // Ждем завершения процесса
        WaitForSingleObject(info.hProcess,INFINITE);
        // Процесс завершен - закрываем полученные дескрипторы
        CloseHandle(info.hThread);
        CloseHandle(info.hProcess);
      }

    // Освобождаем все динамические строки
    rdsFree(cmd);	

    return ok;
  }
